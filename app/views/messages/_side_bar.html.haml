.side-bar
  .side-ber__user-name
    .UserName 
      .name
        = current_user.name
      %ul.iconlist
        %li.icon
          = link_to new_group_path, class:"icon" do
            = icon('far', 'edit')
        %li.icon
          = link_to  edit_user_path(current_user), class:"icon" do
            = icon('fas', 'cog')
        
        
      

  .side-ber__group-list  
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message

        